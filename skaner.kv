#: include bottom_menu_button.kv

<Skaner>:
    canvas.before:
        Color:
            rgb: (0.98, 0.98, 0.98)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
    BoxLayout:
        size_hint: 1, 0.08
        pos_hint: {'x': 0 , 'y': 0.92}
        canvas:
            Color:
                rgb: (0.137, 0.921, 0.596)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        Label:
            halign: 'right'
            valign: 'middle'
            text: '[b][i][size=30]SKANER'
            size_hint_x: None
            size: self.texture_size
            pos_hint: {'Left': 4}
            markup: True
    BottomMenuButton:
        id: copy_button
        size_hint: 0.35, 0.08
        pos_hint: {'x': 0.7 , 'y': 0.92}
        background_normal: 'button_icon/file.png'
        on_press: root.copy_button_click(self)
    BottomMenuButton:
        size_hint: 0.15, 0.08
        pos_hint: {'x': 0.28 , 'y': 0.92}
        background_normal: 'button_icon/gith.png'
        on_release:
            import webbrowser
            webbrowser.open('https://github.com/kls028')
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: 0.96, 0.82
        pos_hint: {'x': 0.02 , 'y': 0.09}
        canvas.before:
            Color:
                rgb: (0.8,0.8,0.8)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        Label:
            id: file_label
            pos_hint: {'x': 0.04 , 'y': 0.05}
            halign: 'left'
            valign: 'top'
            text: '[b][i][color=000000][size=30]'
            size: self.texture_size
            size_hint_y: None
            text_size: self.width, None

            markup: True


    BoxLayout:
        size_hint: 1, 0.082
        pos_hint: {'x': 0 , 'y': 0}
        spacing : 1

        canvas:
            Color:
                rgb: (1,1,1)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        BottomMenuButton:
            id: reload_button
            name: 'reload'
            background_normal: 'button_icon/reload.png'
            on_press: root.reload_button_click(self)
        BottomMenuButton:
            id: camera_button
            name: 'camera'
            background_normal: 'button_icon/camera.png'
            on_press: root.camera_button_click(self)

        